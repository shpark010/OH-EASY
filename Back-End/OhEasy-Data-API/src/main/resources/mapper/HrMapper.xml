                    WHEN nm_emp REGEXP '^[가-힣]' THEN 1
                    WHEN nm_emp REGEXP '^[A-Za-z]' THEN 2
                    WHEN nm_emp REGEXP '^[0-9]' THEN 3
                    ELSE 4
                END,
