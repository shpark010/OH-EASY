        hr_emp_dtl d on m.CD_EMP = d.CD_EMP
    where 
        m.CD_EMP=#{cdEmp}
</select>

<!-- 한 사원의 사원테이블 update-->
<update id="updateHrEmpMst">
    update hr_emp_mst
    set ${column} = #{value} 
    where cd_emp = #{cdEmp}
</update>
<!-- 한 사원의 인사테이블 update
<update id="updateHrEmpDtl">
    update hr_emp_dtl
    set ${column} = #{value} 
    where cd_emp = #{cdEmp}
</update>
-->
<update id="updateHrEmpDtl">
    update hr_emp_dtl
    <set>
        <choose>
            <!-- value 값이 null이면 해당 컬럼을 NULL로 설정 -->
            <when test="value == 'null'">
                ${column} = NULL
            </when>
            <!-- 그렇지 않으면 일반적으로 값을 설정 -->
            <otherwise>
                ${column} = #{value}
            </otherwise>
        </choose>
    </set>
    where cd_emp = #{cdEmp}
</update>


